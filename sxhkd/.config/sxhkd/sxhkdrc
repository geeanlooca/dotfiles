super + d
    rofi -combi-modi window,drun,run -show combi -modi combi 

super + r
    rofi -show run

# Browsers
super + {u, U, ctrl + u}
    {firefox, firefox --private-window, chromium}

super + K
    pkill -USR1 sxhkd && notify-send "Keyboard shortcuts reloaded"

# Find files
super + o; {h,o,p,b,d}
    rofd {~,~,~/Nextcloud/Libri, ~/Nextcloud/PhD} 

# File managers
super + {t,T}
    {dolphin, thunar}

# Misc. applications
super + m; {m,b,t,T}
    {matlab, mendeleydesktop,telegram-desktop,thunderbird}

# Terminal
super + Return
    konsole

# YouTube mpv handler
super + y
    utube

# Emojis
super + E
    rofi-emoji

# Music!
super + space
    music-toggle

super + {Left, Right}
    playerctl -p spotify {previous,next}

super + {s, S, Y}
    clipboard-search {google,scholar,youtube}

{ctrl, super, _} + Print
    spectacle {-a, -r, -f}

super + e
    emacs

super + c
    calibre

super + z
    zotero

ctrl + alt + k
    rofi-kb-layout

alt + p
    bwmenu -C

