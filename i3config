# Application bindings
bindsym $mod+u exec --no-startup-id google-chrome-stable
bindsym $mod+t exec --no-startup-id dolphin
exec xmodmap -e "clear lock" #disable caps lock switch
exec xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape
bindsym Print exec --no-startup-id spectacle -f
bindsym Shift+Print exec --no-startup-id spectacle -r

# Audio and music control
bindsym Mod1+space exec --no-startup-id clementine -t
bindsym XF86WakeUp exec --no-startup-id amixer -D pulse set Master toggle && notify-send "Mute state changed"
bindsym XF86Sleep exec --no-startup-id amixer -q set Master 4%- unmute 
bindsym XF86PowerOff exec --no-startup-id amixer -q set Master 4%+ unmute unmute


bindsym $mod+Left exec --no-startup-id clementine -r
bindsym $mod+Right exec --no-startup-id clementine -f
bindsym $mod+Up exec --no-startup-id clementine --volume-up
bindsym $mod+Down exec --no-startup-id clementine --volume-down

# Additional bindings
bindsym $mod+Shift+n move workspace to output left
bindsym $mod+Shift+m move workspace to output right
bindsym $mod+m focus output right
bindsym $mod+n focus output left
bindsym $mod+Shift+s sticky toggle
workspace_auto_back_and_forth yes

