
set $mod Mod4

font pango:Ubuntu 12

floating_modifier $mod

# start a terminal
set $terminal xfce4-terminal
bindsym $mod+Return exec --no-startup-id $terminal

# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+d exec "rofi -combi-modi drun,run -show combi -modi combi "
bindsym $mod+r exec "rofi -show run"
bindsym Mod1+Tab exec "rofi -show window"
bindsym Mod1+s exec ~/bin/rofi-scripts/rofi-surfraw/rofi-surfraw
bindsym Mod1+f exec rofi -show find -modi find:~/bin/rofi-scripts/rofi-finder/finder.sh

bindsym $mod+Tab workspace back_and_forth
bindsym $mod+o workspace prev_on_output
bindsym $mod+p workspace next_on_output

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym Mod1+Shift+h resize shrink width 10 px or 10 ppt
bindsym Mod1+Shift+j resize shrink height 10 px or 10 ppt
bindsym Mod1+Shift+k resize grow height 10 px or 10 ppt
bindsym Mod1+Shift+l resize grow width 10 px or 10 ppt

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child
#
#
set $smallscreen HDMI-3 
set $bigscreen DVI-1

set $telegram "13: Telegram "
set $music "10: Music "
set $mail "12: Mail "
set $res "14: Resources "
set $torrent "11: Torrent "


# Assign workspaces to monitors
# workspace $mail output HDMI-A-0
# workspace $telegram output HDMI-A-0
# workspace $res output HDMI-A-0
# workspace $torrent output HDMI-A-0


# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace $music
bindsym $mod+F9 workspace $torrent
bindsym $mod+F10 workspace $mail
bindsym $mod+F11 workspace $telegram
bindsym $mod+F12 workspace $res

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace $music
bindsym $mod+Shift+F9 move container to workspace $torrent
bindsym $mod+Shift+F10 move container to workspace $mail
bindsym $mod+Shift+F11 move container to workspace $telegram
bindsym $mod+Shift+F12 move container to workspace $res

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


# Appearance
set $background #2E3440
set $foreground #D8DEE9
set $ice #D8DEE9
set $red #BF616A
set $green #A3BE8C
set $blue #5E81AC
set $black #000000
set $white #FFFFFF
set $yellow #EBCB8B
set $magenta #B48EAD

bar {
    status_command i3blocks
    # status_command i3status
    colors {
                statusline $white
                background $black
                                    #Border #Backgr #Font
                active_workspace   $green $green $background
                focused_workspace   $blue $blue $black
                inactive_workspace  $black $black $white
                urgent_workspace    $magenta $magenta $background
        }
}


# class                 border  backgr. text    indicator
client.focused_inactive $ice $ice $background $background
client.focused          $blue $blue $ice $background
client.unfocused        $ice $ice $background $background
client.urgent           $yellow $yellow $background $background
client.placeholder      #000000 #000000 #ffffff #000000

# Remove titlebar
new_window pixel 3
# hide_edge_borders both

# Startup applications
# CORE
exec --no-startup-id dunst -config ~/.dunstrc
exec_always --no-startup-id pkill compton ; compton --config ~/dotfiles/compton.conf
exec --no-startup-id volumeicon
exec --no-startup-id numlockx

# EXTRA
exec --no-startup-id nm-applet
exec --no-startup-id redshift-gtk
exec --no-startup-id dropbox start
# exec --no-startup-id telegram-desktop

assign [class="(?i)Clementine"] workspace $music
assign [class="(?i)Deluge"] workspace $torrent
assign [class="(?i)Transmission"] workspace $torrent
assign [class="(?i)Thunderbird"] workspace $mail
assign [class="(?i)Telegram"] workspace $telegram
assign [class="(?i)gnome-system-monitor"] workspace $res

for_window [class="mpv"] floating enable
# for_window [class="feh"] floating enable
for_window [class="ristretto"] floating enable

# Application bindings
bindsym $mod+u exec --no-startup-id firefox
bindsym $mod+Shift+u exec --no-startup-id firefox --private-window
bindsym $mod+Control+u exec --no-startup-id chromium

bindsym $mod+t exec --no-startup-id thunar

# Screenshot
bindsym Print exec --no-startup-id xfce4-screenshooter -f
bindsym Shift+Print exec --no-startup-id xfce4-screenshooter -r
bindsym Control+Print exec --no-startup-id xfce4-screenshooter -w


# Additional bindings
bindsym $mod+Shift+n move workspace to output left
bindsym $mod+Shift+m move workspace to output right
bindsym $mod+Control+n move container to output left
bindsym $mod+Control+m move container to output right
bindsym $mod+m focus output right
bindsym $mod+n focus output left
bindsym $mod+Shift+s sticky toggle
workspace_auto_back_and_forth yes

# Mouse bindings
set $middlebutton button2 
set $leftbutton button1

bindsym $mod+$middlebutton --whole-window floating toggle
bindsym $mod+Shift+$middlebutton --whole-window kill
bindsym $mod+Shift+$leftbutton --whole-window sticky toggle ; exec notify-send "Sticky status changed"

# mode "Session management" {
#     bindsym r exec reboot
#     bindsym s exec poweroff
#     bindsym e exec i3-msg exit
#     bindsym Escape mode "default"
# }

bindsym $mod+Escape mode "Session management"

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Quickswitch
bindsym $mod+g exec --no-startup-id quickswitch.py -e
bindsym $mod+Shift+b exec --no-startup-id quickswitch.py -m;
bindsym $mod+period exec --no-startup-id quickswitch.py -s

# Remap Caps lock to Esc
exec xmodmap -e "clear lock" #disable caps lock switch
exec xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# Gaps
gaps inner 7
smart_gaps on
smart_borders on

# Wallpaper
exec --no-startup-id feh --bg-scale /home/gianluca/Immagini/wallpaper
bindsym $mod+XF86WakeUp exec --no-startup-id /home/gianluca/bin/random_wallpaper.py

# Locking and Session Management
bindsym $mod+XF86Sleep exec --no-startup-id /home/gianluca/bin/screenlocker/lockscreen
bindsym $mod+XF86PowerOff exec --no-startup-id /home/gianluca/bin/manage_session.py
exec xset s off
exec xautolock -time 30 -notify 2 -locker /home/gianluca/bin/screenlocker/lockscreen -notifier "Screen will be locked in 2 minutes"

bindsym XF86WakeUp exec --no-startup-id amixer -q set Master toggle && notify-send "Mute state changed"
bindsym XF86PowerOff exec --no-startup-id amixer -q set Master 4%+ unmute 
bindsym XF86Sleep exec --no-startup-id amixer -q set Master 4%- unmute

# youtube
bindsym $mod+y exec --no-startup-id /home/gianluca/bin/utube.sh

# MPD control 
exec_always --no-startup-id ~/bin/musicstart
bindsym Mod1+space exec --no-startup-id mpc toggle
bindsym Mod1+h exec --no-startup-id mpc prev
bindsym Mod1+l exec --no-startup-id mpc next
bindsym Mod1+j exec --no-startup-id mpc volume -5
bindsym Mod1+k exec --no-startup-id mpc volume +5

