alias ace='acestream-launcher -p mpv '

alias descr='tree . -d | less'
alias desc='tree . -d'
alias sxiv='sxiv -a'

# Functions

# Cheatsheets
cs() {
    case "$1" in
        tmux)
            xdg-open http://tmuxcheatsheet.com/
            ;;
        *)
            exit 1
    esac
}

# Open tomb archives
tombopen() {
    tomb open "${1}.tomb" -k "${1}.tomb.key" -f
    cd "/media/${1}"
    xdg-open "/media/${1}"
}
